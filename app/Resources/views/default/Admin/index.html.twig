{% extends 'baseAdmin.html.twig' %}

{% block title %}Admin Panel{% endblock %}

{% block body %}
    <div class="container-fluid">
        <div class="col-md-10 m-auto text-center">
            <h1 class="mt30">Dashboard</h1>
            <hr/>

            <div class="col-md-10 m-auto">
                {% set userPastes = (activePastes | length) - (anonymousePastes | length) %}
                <div class="row">
                    <div class="col-md-6">
                        <div class="row">
                            <div class="col-md-12 text-center">
                                <h4>Pastes</h4>
                                <hr/>
                            </div>
                            <div class="col-md-6 text-right">
                                <p>Total Pastes: {{ pastes | length }}</p>
                                <p>Active Pastes: {{ activePastes | length }}</p>
                                <p>Deleted Pastes: {{ deletedPastes| length }}</p>
                                <p>Suspended Pastes: {{ suspendedPastes | length }}</p>
                            </div>

                            <div class="col-md-6 text-left">
                                <p>Public Pastes: {{ publicPastes | length }}</p>
                                <p>Privated Pastes: {{ privatePastes | length }}</p>
                                <p>Anonymous Pastes: {{ anonymousePastes | length }}</p>
                                <p>User Pastes: {{ userPastes }}</p>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="row">
                            <div class="col-md-12 text-center">
                                <h4>Users</h4>
                                <hr/>
                            </div>

                            <div class="col-md-6 text-right">
                                <p>Total Users: {{ users | length }}</p>
                                <p>Actived Users: {{ activeUsers | length }}</p>
                            </div>

                            <div class="col-md-6 text-left">
                                <p>Inactived Users: {{ inactiveUsers | length }}</p>
                                <p>Suspended Users: {{ suspendedUsers | length }}</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}