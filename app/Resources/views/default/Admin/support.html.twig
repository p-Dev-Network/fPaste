{% extends 'baseAdmin.html.twig' %}

{% block title %}Support{% endblock %}

{% block body %}
    <div class="container-fluid">
        <div class="col-md-10 m-auto text-center">
            <h1 class="mt30">Support</h1>
            <hr/>

            <div class="col-md-10 m-auto">
                <div class="card text-center">
                    <div class="card-header">
                        <ul class="nav nav-tabs" id="adminUsersTab" role="tablist">
                            <li class="nav-item">
                                <a class="nav-link active" data-toggle="tab" href="#abuse" role="tab" aria-controls="abuse" aria-selected="true">Abuse</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" data-toggle="tab" href="#technical" role="tab" aria-controls="technical" aria-selected="false">Technical Problems</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" data-toggle="tab" href="#other" role="tab" aria-controls="other" aria-selected="false">Other</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" data-toggle="tab" href="#closed" role="tab" aria-controls="closed" aria-selected="false">Closed</a>
                            </li>
                        </ul>

                    </div>
                    <div class="card-body">
                        <div class="tab-content" id="myTabContent">
                            <div class="tab-pane fade show active" id="abuse" aria-labelledby="abuse">
                                <div class="table-responsive">
                                    <table class="table table-bordered">
                                        <thead>
                                        <tr>
                                            <th>ID</th>
                                            <th>Email</th>
                                            <th>Username</th>
                                            <th>Date</th>
                                            <th>Options</th>
                                        </tr>
                                        </thead>
                                        <tbody>
                                        {% for r in abuse %}
                                            <tr>
                                                <td>{{ r.id }}</td>
                                                <td>{{ r.email }}</td>
                                                <td>{% if r.user is null %}Anonymous{% else %}<a href="{{ path('adminUserProfile', {'id': r.user.id}) }}">{{ r.user.username }}</a>{% endif %}</td>
                                                <td>{{ r.date | date('d-m-Y H:i:s') }}</td>
                                                <td>
                                                    <a href="{{ path('adminViewTicket', {'id': r.id}) }}"><i class="fa fa-arrow-right"></i></a>
                                                    {% if r.readed %}
                                                        <i class="fa fa-envelope-open"></i>
                                                    {% else %}
                                                        <i class="fa fa-envelope"></i>
                                                    {% endif %}

                                                    <a href="{{ path('closeTicket', {'id': r.id}) }}"><i class="fa fa-remove remove"></i></a>
                                                </td>
                                            </tr>
                                        {% endfor %}
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                            <div class="tab-pane fade" id="technical" aria-labelledby="profile-tab">
