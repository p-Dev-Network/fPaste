{% extends 'base.html.twig' %}

{% block title %}Sign Up{% endblock %}

{% block body %}
    <div class="col-md-6 m-auto">
        <div class="card mt30">
            <div class="card-header text-center">
                <h2>Sign Up!</h2>
            </div>

            <div class="card-body">
                {{ form_start(form) }}
                <div class="text-center ">
                    <div class="row mt30">
                        <div class="col-md-6">
                            {{ form_widget(form.username) }}
                        </div>

                        <div class="col-md-6">
                            {{ form_widget(form.email) }}
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            {{ form_widget(form.password.first) }}
                        </div>

                        <div class="col-md-6">
                            {{ form_widget(form.password.second) }}
                        </div>
                    </div>

                    {% if form_errors(form.username) or form_errors(form.email) or form_errors(form.password.first) %}
                        <div class="alert alert-danger text-center formError" role="alert">
                            <h4>Error</h4>
                            <hr/>
                            {{ form_errors(form.username) }}
                            {{ form_errors(form.password.first) }}
                            {{ form_errors(form.email) }}
                        </div>
                    {% endif %}

                    <p><input type="checkbox" name="terms" value="terms"/> I read and accept the <a href="{{ path('terms') }}" target="_blank">Terms and Conditions of Use</a></p>
                    {% if error == 500 %}
                        <div class="alert alert-danger" role="alert">
                            You must accept the Terms and Conditions of Use.
                        </div>
                    {% endif %}
                    {{ form_widget(form.SignUp) }}
                </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}